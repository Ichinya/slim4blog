{% extends 'base.twig' %}

{% block body %}

    <div class="container">
        {% if post.file_exists %}
        <img class="img-fluid" src="{{ post.image_path }}" alt="{{ post.title|escape }}">
        {% endif %}
        <h1 class="mt-3 mb-3">{{ post.title|escape }}</h1>
        <div class="container-fluid mb-3">
            <div class="row">
                <p class="text-muted">Автор | {{ post.published_date|date("F d, Y") }}</p>
            </div>
        </div>
        <div>
            {{ post.content|raw }}
        </div>
    </div>
{% endblock %}