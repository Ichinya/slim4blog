{% for post in posts %}
    <div class="row mb-2 bg-light" style="border: 1px solid #ddd;">
        <div class="p-3">
            {% if post.file_exists %}
                <img src="{{ asset_url(post.image_path) }}" class="card-img-top" alt="{{ post.title|escape }}">
            {% endif %}
            <div class="mt-3">
               <h5 class="card-title"> <a href="{{ url(post.slug) }}">{{ post.title|escape }}</a></h5>
                <span class="text-muted">Автор | {{ post.published_date|date("F d, Y") }}</span>
                <p class="mt-2">{{ post.description|escape }}</p>
                <a href="{{ url(post.slug) }}" class="">Read more</a>
            </div>
        </div>
    </div>
{% endfor %}