{% extends 'base.twig' %}

{% block body %}
    <div class="container">
        <h1 class="mb-3 mt-3">Hello, world!</h1>
        <div class="container row">
            {% for post in posts %}
                <div class="card m-2 p-0" style="width: 18rem;">
                    <img src="{{ post.image_path }}" class="card-img-top" alt="{{ post.title }}">
                    <div class="card-body">
                        <h5 class="card-title"><a href="/{{ post.slug }}">{{ post.title|escape }}</a></h5>
                        <p class="card-text">{{ post.description|escape }}</p>
                        <a href="/{{ post.slug }}" class="btn btn-primary">Читать</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}